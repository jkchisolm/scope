{
  "extends": "@workspace/typescript-config/base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "types": ["vite/client"],

    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,

    /* Linting */
